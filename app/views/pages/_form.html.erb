<%= form_for @page, :html => { :class => "form-horizontal page" } do |f| %>

  <% if @page.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :subject_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subject_id, :class => 'form-control' %>
    </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :permalink, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :permalink, :class => 'form-control' %>
    </div>

  <div class="form-group">
    <%= f.label :position, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :position, :class => 'form-control' %>
    </div>
    <%=f.error_span(:position) %>
  </div>

  <div class="form-group">
    <%= f.label :visible, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :visible, :class => 'form-control' %>
    </div>
   </div>
  
    
   
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pages_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
<script type="text/javascript">
   $(document).ready(function(){
    $(".ckeditor").ckeditor({});
   });
 </script>